# ===========================================
# Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# cp .env.example .env

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL="postgresql://memestore:memestore_secret@localhost:5432/memestore_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# Security
BCRYPT_SALT_ROUNDS=12
REFRESH_TOKEN_BYTES=32

# JWT Authentication
JWT_SECRET="change-this-to-a-secure-random-string-in-production"
JWT_ACCESS_EXPIRATION=15m
# Note: Refresh tokens are session-based (hashed in DB), not JWTs

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_API_VERSION="2023-10-16"

# Printful
PRINTFUL_API_KEY="your-printful-api-key"
PRINTFUL_WEBHOOK_SECRET="your-printful-webhook-secret"

# Email Service (SendGrid)
SENDGRID_API_KEY="SG...."
EMAIL_FROM="noreply@memestore.com"
EMAIL_FROM_NAME="MemeStore"

# Alternative: Resend
# RESEND_API_KEY="re_..."

# OpenAI (for AI features)
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"

# Sentry (Error Monitoring)
SENTRY_DSN="https://..."

# Frontend URL (for CORS, emails, etc.)
FRONTEND_URL="http://localhost:3001"

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# CDN / Storage (Cloudinary example)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Alternative: AWS S3
# AWS_ACCESS_KEY_ID="..."
# AWS_SECRET_ACCESS_KEY="..."
# AWS_S3_BUCKET="memestore-uploads"
# AWS_S3_REGION="eu-west-1"
